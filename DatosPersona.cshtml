@model Persona

<link rel="stylesheet" href="~/css/estrellas.css" />

<div class="container text-center">
    <h1 style="color:red">Datos de @Model.Nombre</h1>

    <h3>Apellido: @Model.Apellido</h3>
    <h3>Descripcion: @Model.Descripcion</h3>
    <h3>Valoracion:</h3>
    @for (int i = 0; i < Model.Valoracion; i++)
    {
        <label for="radio5" id="estrellafija">★</label>
    }
</div>